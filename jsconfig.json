{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@fonts": ["src/fonts"],
      "@fonts/*": ["src/fonts/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@images": ["src/images"],
      "@images/*": ["src/images/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"]
    }
  }
}
